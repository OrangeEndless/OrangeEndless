	<!--
		This grid acts as a root panel for the page that defines two rows:
		* Row 0 contains the back button and page title
		* Row 1 contains the rest of the page layout
	-->
	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"  DataContext="{StaticResource DesignVM}">
		<Grid.ChildrenTransitions>
			<TransitionCollection>
				<EntranceThemeTransition/>
			</TransitionCollection>
		</Grid.ChildrenTransitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="140"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Back button and page title -->
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="120"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Rectangle Fill="#FFF9B763" HorizontalAlignment="Left" Height="140" VerticalAlignment="Top" Width="1366" Grid.ColumnSpan="2"/>
			<Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
						Style="{StaticResource NavigationBackButtonNormalStyle}"
						VerticalAlignment="Top"
						AutomationProperties.Name="Back"
						AutomationProperties.AutomationId="BackButton"
						AutomationProperties.ItemType="Navigation Button" Foreground="White"/>
			<TextBlock x:Name="pageTitle" Text="ABOUT" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
						IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40" FontFamily="Segoe UI Black" FontWeight="Bold" Foreground="White"/>
		</Grid>
		<Image Margin="120,40,1121,463" Grid.Row="1" Source="1 (1).jpg" Stretch="Fill"/>
		<Image Margin="120,195,1121,308" Grid.Row="1" Source="1.jpg" Stretch="Fill"/>
		<Image Margin="120,350,1121,153" Grid.Row="1" Source="1 (2).jpg" Stretch="Fill"/>
		<TextBlock HorizontalAlignment="Left" Margin="250,40,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Wencey Wang" VerticalAlignment="Top" Height="60" Width="350" FontFamily="Segoe UI Light" FontSize="48"/>
		<TextBlock HorizontalAlignment="Left" Margin="250,195,0,0" Grid.Row="1" TextWrapping="Wrap" Text="徵橘" VerticalAlignment="Top" Height="60" Width="130" FontFamily="Segoe UI Light" FontSize="48"/>
		<TextBlock HorizontalAlignment="Left" Margin="250,350,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Amour light" VerticalAlignment="Top" Height="60" Width="350" FontFamily="Segoe UI Light" FontSize="48"/>
		<TextBlock HorizontalAlignment="Left" Margin="250,105,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="350" FontSize="21.333">
			<Run Text="衡自超"/>
			<LineBreak/>
			<Run Text="一个穷高中生，很穷。"/>
		</TextBlock>
		<TextBlock HorizontalAlignment="Left" Margin="250,260,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="430" FontSize="21.333">
			<Run Text="Artbullet"/>
			<Run Text=" "/>
			<Run Text="联合创始人，UI Designer"/>
			<Run Text=" "/>
			<Run Text="研习中"/>
			<Run Text="。"/>
			<LineBreak/>
			<Run Text="大概是一个点子很多的人。"/>
		</TextBlock>
		<TextBlock HorizontalAlignment="Left" Margin="250,415,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="400" FontSize="21.333">
			<Run Text="游戏平衡性调校"/>
			<LineBreak/>
			<Run Text="一个没什么创意的、所谓的创意策划"/>
			<Run Text="。"/>
		</TextBlock>
