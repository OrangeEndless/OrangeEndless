<mvvm:MVVMPage   
	x:Name="pageRoot"
	x:Class="OrangeEndLess.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:OrangeEndLess"

	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:mvvm="using:MVVMSidekick.Views"
	xmlns:vm="using:OrangeEndLess.ViewModels"
	mc:Ignorable="d" Width="Auto">
    <Page.Resources>
        <vm:MainPage_Model x:Key="DesignVM"/>
        <ControlTemplate x:Key="RadioButtonOverView" TargetType="RadioButton">
            <Grid Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="States">
                        <VisualState x:Name="Unchecked"/>
                        <VisualState x:Name="UncheckedPointerOver">
                            <Storyboard>
                        		<ColorAnimation Duration="0" To="#FFFFC983" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle" d:IsOptimized="True"/>
                        	</Storyboard>
                        </VisualState>
                        <VisualState x:Name="Checked">
                        	<Storyboard>
                        		<ColorAnimation Duration="0" To="White" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="rectangle" d:IsOptimized="True"/>
                        		<ColorAnimation Duration="0" To="Black" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="textBlock" d:IsOptimized="True"/>
                        		<ColorAnimation Duration="0" To="Black" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" Storyboard.TargetName="textBlock1" d:IsOptimized="True"/>
                        	</Storyboard>
                        </VisualState>
                    </VisualStateGroup>

                </VisualStateManager.VisualStateGroups>
                <Rectangle x:Name="rectangle" Fill="#00FFC983" Margin="0" Grid.ColumnSpan="4" StrokeThickness="0"/>
                <Image Grid.Column="1" Margin="0,5" Source="Images/OverviewWhite.png" Stretch="Fill"/>
                <TextBlock x:Name="textBlock" Grid.Column="3" HorizontalAlignment="Left" Margin="0,12,0,0" TextWrapping="Wrap" Text="{StaticResource Overview}" VerticalAlignment="Top" Foreground="White"/>
                <TextBlock x:Name="textBlock1" Grid.Column="3" HorizontalAlignment="Left" Margin="0,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Text="{StaticResource VOID}"/>
            </Grid>
        </ControlTemplate>
    </Page.Resources>
    <!--Begin App Bar Binding Patch. If you don't need Binding Top/Bottom Appbar please ignore these code -->
    <!--<Page.DataContext>
		<Binding  RelativeSource="{RelativeSource Mode=Self}" Path="ViewModel"/>
	</Page.DataContext>
	<mvvm:MVVMPage.ViewModel>
		<Binding Source="{StaticResource DesignVM}" />
	</mvvm:MVVMPage.ViewModel>
	<mvvm:MVVMPage.BottomAppBar>
		<AppBar d:DataContext="{StaticResource DesignVM}"><TextBlock TextWrapping="Wrap" Text="{Binding BindableInstanceId, Mode=OneWay}"/></AppBar>
	</mvvm:MVVMPage.BottomAppBar>
	-->
    <!--End App Bar Binding Patch. If you don't need Binding  Top/Bottom Appbar please ignore these code -->
    <Grid x:Name="MainGird" Background="White" DataContext="{Binding Source={StaticResource DesignVM}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFF9B763" Stroke="Black" StrokeThickness="0" Grid.RowSpan="3"/>
        <Grid Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="#FFFF8E41" Stroke="Black" StrokeThickness="0" Grid.ColumnSpan="9"/>
            <TextBlock x:Name="TextBlockTitle" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{StaticResource Title}" VerticalAlignment="Center" FontSize="18.667" FontFamily="Segoe UI" Grid.Column="1" Foreground="White" Margin="0"/>
            <TextBlock x:Name="TextBlockNumberOfMoneySmallOut" Grid.Column="4" Margin="0,2,0,0" TextWrapping="Wrap" Text="{Binding TextBlockNumberOfMoneySmallOut}" FontFamily="Microsoft YaHei" FontSize="21.333" VerticalAlignment="Center" Foreground="White" Height="28"/>
            <TextBlock x:Name="TextBlockNumberOfOrangeSmallOut" TextWrapping="Wrap" Text="{Binding TextBlockNumberOfOrangeSmallOut}" FontSize="21.333" FontFamily="Microsoft YaHei" Grid.Column="7" Margin="0,2,0,0" VerticalAlignment="Center" Foreground="White" Height="28"/>
            <Image Grid.Column="6" Margin="0" Source="Logo.png" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <CompositeTransform ScaleX="0.8" ScaleY="0.8"/>
                </Image.RenderTransform>
            </Image>
            <Image Grid.Column="2" Margin="1006,0,13,0"/>
        </Grid>
        <ScrollViewer Grid.Row="1">
            <StackPanel Height="199" VerticalAlignment="Top">
                <local:ListItem d:LayoutOverrides="Width, Height" Text1="{StaticResource Overview}" Text2="{StaticResource VOID}" ImageBlack="Images/OverviewBlack.png" ImageWhite="Images/OverviewWhite.png" Margin="0,20,0,0" IsDefault="True"/>

            </StackPanel>
            
        </ScrollViewer>
        <Rectangle Fill="#FFFF8E41" HorizontalAlignment="Left" Height="60" Grid.Row="2" Stroke="Black" StrokeThickness="0" VerticalAlignment="Top" Width="1366" Grid.ColumnSpan="3"/>
        <Grid x:Name="GridOverView" Grid.Column="1" Margin="0" Grid.Row="1"/>
    </Grid>
</mvvm:MVVMPage>

