<mvvm:MVVMPage   
    x:Name="pageRoot"
    x:Class="OrangeEndLess.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OrangeEndLess"

    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:MVVMSidekick.Views"
    xmlns:vm="using:OrangeEndLess.ViewModels"
    Background="Black"
    mc:Ignorable="d">
    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
       
        <vm:MainPage_Model x:Key="DesignVM"/>
    </Page.Resources>
    <!--Begin App Bar Binding Patch. If you don't need Binding Top/Bottom Appbar please ignore these code -->
    <!--<Page.DataContext>
        <Binding  RelativeSource="{RelativeSource Mode=Self}" Path="ViewModel"/>
    </Page.DataContext>
    <mvvm:MVVMPage.ViewModel>
        <Binding Source="{StaticResource DesignVM}" />
    </mvvm:MVVMPage.ViewModel>
    <mvvm:MVVMPage.BottomAppBar>
		<AppBar d:DataContext="{StaticResource DesignVM}"><TextBlock TextWrapping="Wrap" Text="{Binding BindableInstanceId, Mode=OneWay}"/></AppBar>
	</mvvm:MVVMPage.BottomAppBar>
    -->
    <!--End App Bar Binding Patch. If you don't need Binding  Top/Bottom Appbar please ignore these code -->
    <Grid x:Name="MainGird" Background="White" DataContext="{Binding Source={StaticResource DesignVM}}">
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{StaticResource Title}" VerticalAlignment="Top" Margin="0" Height="67" Width="280" FontSize="56"/>
            <Grid Grid.Row="1" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.7*"/>
                    <ColumnDefinition Width="1.3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="NumberOfOrangeOut" Margin="0,32,0,0" TextWrapping="WrapWholeWords" VerticalAlignment="Top" TextAlignment="Center" Height="67" FontSize="56" Text="{Binding NumberOfOrange}"/>
                <TextBlock Margin="0,10,0,0" TextWrapping="Wrap" Text="{StaticResource NumberOfOrange}" VerticalAlignment="Top" FontSize="18" TextAlignment="Center"/>
                <Button x:Name="BRush" Content="{StaticResource Rush}" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Bottom" Grid.Row="1" FontSize="56" Command="{Binding CommandRush}"/>
                <TextBlock x:Name="SpeedOfOrangeRiseOut" Margin="0,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" FontSize="20" Text="{Binding CPSOfOrange}"/>
                <ScrollViewer  Height="Auto"  Width="Auto" Margin="0" Grid.Column="2" ZoomMode="Disabled" HorizontalScrollMode="Disabled" Grid.RowSpan="2" IsVerticalRailEnabled="False" BorderThickness="0" Background="{x:Null}" BorderBrush="#FF4DFFD2">
                    <StackPanel VerticalAlignment="Top">
                        <Grid x:Name="Cursor" Margin="0,0,18,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="TitleOfCursorOut" TextWrapping="Wrap" Text="{StaticResource TitleOfCursor}" FontSize="36"/>
                                <TextBlock x:Name="LebelOfCursorOut" TextWrapping="Wrap" Text="{StaticResource LabelOfCursor}" FontSize="14"/>
                                <TextBlock x:Name="PriceOfCursorOut" TextWrapping="Wrap" Text="TextBlock" FontSize="20"/>
                                <TextBlock x:Name="RiseOfCursorOut" TextWrapping="Wrap" Text="TextBlock" FontSize="20"/>
                            </StackPanel>
                            <TextBlock x:Name="NumberOfCursorOut" Margin="0" TextWrapping="Wrap" Text="0" FontSize="72" TextAlignment="Right" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2"/>
                            <Grid Margin="0" Grid.Row="1" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="Buy1Cursor" Content="{StaticResource LebelOfBuy1}" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch"/>
                                <Button x:Name="Buy10Cursor" Content="{StaticResource LebelOfBuy10}" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" Grid.Column="1"/>
                                <Button x:Name="Sell1Cursor" Content="{StaticResource LebelOfSell1}" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" Grid.Column="2"/>
                                <Button x:Name="Sell10Cursor" Content="{StaticResource LebelOfSell10}" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch" Grid.Column="3"/>
                                <Button x:Name="SellAllCursor" Content="{StaticResource LebelOfSellAll}" Grid.Column="4" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch"/>
                            </Grid>
                        </Grid>

                    </StackPanel>
                </ScrollViewer>
                <TextBox x:Name="TBEvent" Grid.Column="1" TextWrapping="Wrap" Grid.RowSpan="2" BorderThickness="0" Background="{x:Null}" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled" FontSize="20"/>
                <Rectangle Margin="0" StrokeThickness="0" Grid.RowSpan="2" Grid.Column="1">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="1"/>
                            <GradientStop Color="Transparent"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>



        </Grid>
    </Grid>
</mvvm:MVVMPage>

